<nav>
<header>
    <img class="logo" src="{{logoImg}}">
    <div style="clear:both;"></div>
    <style>
        .firstImpression{
            background-image: url("{{backgroundImg}}");
        }
        section {
            background-color: {{ colorPicker }}; 
        }
        header{
            background-color: {{ colorPicker }}; 
        }
        .primaryColor {
            background-color: {{ primaryColor }};
        }
        .secundaryColor {
            background-color: {{ secundaryColor }};
        }
    </style>
</header>
<section>
        <div class="firstImpression">
            <p>{{pageTitle}}</p>
        </div>
        <div class="aboutUs">
            <div class="dot"><i class="fas fa-phone"></i></div>
            <div class="dot"><i class="far fa-thumbs-up"></i></div>
            <div class="dot"><i class="fas fa-code-branch"></i></div>
            <p>
               {{bodyText}}
            </p>
            <div >
                <button class="button primaryColor" ng-show="callMe" href="">
                    <div ng-hide="leftJustify">
                        {{callMePhrase}}
                    </div>
                    <div class="toLeft" ng-hide="!leftJustify">
                        <i class="fas fa-phone" ng-hide="!showIcons"></i>
                        {{callMePhrase}}
                    </div>
                </button>
                <button class="button secundaryColor" ng-show="call" href="">
                    <div ng-hide="leftJustify">
                        {{callPhrase}}
                    </div>
                    <div class="toLeft" ng-hide="!leftJustify">
                        <i class="fas fa-phone" ng-hide="!showIcons"></i>
                        {{callPhrase}}
                    </div>
                </button>
                <button class="button secundaryColor" ng-show="callMeLater" href="">
                    <div ng-hide="leftJustify">
                        {{callMeLaterPhrase}}
                    </div>
                    <div class="toLeft" ng-hide="!leftJustify">
                        <i class="far fa-calendar" ng-hide="!showIcons"></i>
                        {{callMeLaterPhrase}}
                    </div>
                </button>
                <button class="button secundaryColor" ng-show="email" href="">
                    <div ng-hide="leftJustify">
                        {{emailPhrase}}
                    </div>
                    <div class=primaryColor"toLeft" ng-hide="!leftJustify">
                        <i class="fas fa-at" ng-hide="!showIcons"></i>
                        {{emailPhrase}}
                    </div>
                </button>
                <button class="button secundaryColor" ng-show="whatsapp" href="">
                    <div ng-hide="leftJustify">
                        {{whatsappPhrase}}
                    </div>
                    <div class="toLeft" ng-hide="!leftJustify">
                        <i class="fab fa-whatsapp" ng-hide="!showIcons"></i>
                        {{whatsappPhrase}}
                    </div>
                </button>
            </div>
        </div>
</section>
<div class="pre primaryColor"></div>
<footer class="secundaryColor">
    <a href="http://{{footerLink}}" target="blank">
    <img src="{{footerImg}}" />
        <p>{{footerLink}}</p>
    </a>
</footer>
</nav>